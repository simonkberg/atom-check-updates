{
  "name": "atom-check-updates",
  "version": "1.1.0",
  "description": "CLI for easily updating Atom on RPM or Debian-based systems.",
  "keywords": [
    "atom",
    "cli",
    "debian",
    "redhat",
    "rpm",
    "ubuntu",
    "update"
  ],
  "license": "MIT",
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "files": [
    "lib"
  ],
  "main": "lib",
  "bin": {
    "acu": "lib/index.js",
    "atom-check-updates": "lib/index.js"
  },
  "repository": "simonkberg/atom-check-updates",
  "scripts": {
    "build": "babel src -d lib",
    "build:watch": "nyr build -- -w",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "nyr lint -- --fix",
    "prepublish": "nyr build",
    "release": "standard-version",
    "test": "nyr lint"
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --single-quote --trailing-comma es5 --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "inquirer": "^3.0.6",
    "ora": "^1.2.0",
    "progress": "^2.0.0",
    "request": "^2.71.0"
  },
  "devDependencies": {
    "@simonkberg/eslint-config": "^7.1.0",
    "babel-cli": "^6.7.5",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.1.1",
    "husky": "^0.14.1",
    "lint-staged": "^4.0.0",
    "nyr": "^1.1.0",
    "prettier": "^1.4.4",
    "standard-version": "^4.2.0"
  },
  "engines": {
    "node": ">=4.2.0",
    "npm": ">=2.0.0"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "x64"
  ],
  "preferGlobal": true
}
